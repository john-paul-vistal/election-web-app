                <label class="custom-control-label" for="<%= nine.id %>">
                    <%= nine.firstname %> <%=nine.middlename %> <%= nine.lastname %>
                </label>
            </div>
            <%})%>
        </div>
    </div>

    <div class="card p-2 shadow bg-white rounded" id="10">
        <h5 class="role">REPRESENTATIVE 10:</h5>
        <div class="card-body">
            <% ten_rep.forEach((ten)=>{ %>
            <div class="custom-control-lg custom-control custom-checkbox">
                <input class="custom-control-input checkTen" name="c1" id="<%= ten.id %>" type="checkbox" />
                <label class="custom-control-label" for="<%= ten.id %>">
                    <%= ten.firstname %> <%=ten.middlename %> <%= ten.lastname %>
                </label>
            </div>
            <%})%>
        </div>
    </div>

    <div class="card p-2 shadow bg-white rounded" id="11">
        <h5 class="role">REPRESENTATIVE 11:</h5>
